<div class="home-header">
  
  {{#if search}}
  <h3>Você está buscando por: <span>{{search}}</span> </h3>

  {{#if toughtsQty}}
    <p>Foram encontrados: <span>{{toughtsQty}}</span> pensamentos </p>
  {{else}}
  
    <p>Não encontramos nenhum pensamento </p>
  {{/if}}


  {{else}}
  <h3>Todos os Pensamentos</h3>
  {{/if}}

<form action="/" method="get">
  <input type="text" name="search" placeholder="Buscar">
  <input type="submit" class="btn" value="Buscar">
</form>

<div class="order-container">
  <span>Ordernar por:</span>
  <form action="/" method="get">
    <input type="hidden" name="search" value="{{this.search}}">
    <input type="hidden" name="order" value="new">
    <button type="submit"><i class="bi bi-arrow-up"></i></button>
  </form>
  <form action="/" method="get">
    <input type="hidden" name="search" value="{{this.search}}">
    <input type="hidden" name="order" value="old">
    <button type="submit"><i class="bi bi-arrow-down"></i></button>
  </form>
    <a href="/">Limpar</a>
</div>

  <ul class="toughts-container">
    {{#each toughts}}
    <figure>
      <blockquote>
       "{{this.title}}"
      </blockquote>
      <figcaption>por <span>{{this.User.name}}</span></figcaption>
    </figure>
   
    {{/each}}
  </ul>

  {{#if emptyToughts}}
      <p>Ainda não tem nada cadastrado</p>
  {{/if}}


</div>